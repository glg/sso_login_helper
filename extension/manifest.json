{
   "homepage_url" : "https://github.com/glg/sso_login_helper/tree/master",
   "permissions" : [
      "tabs",
      "identity",
      "pushMessaging",
      "background",
      "webRequestBlocking",
      "http://*/*",
      "https://*/*",
      "contextMenus",
      "webNavigation",
      "notifications",
      "webRequest",
      "cookies",
      "storage"
   ],
   "version" : "0.0.4",
   "background" : {
      "scripts" : [
         "config.js",
         "js/main.js"
      ]
   },
   "update_url" : "https://github.com/glg/sso_login_helper/raw/beta/update_chrome.xml",
   "name" : "GLG Login Helper",
   "icons" : {
      "128" : "images/glg.png",
      "256" : "images/glg.png",
      "16" : "images/glg.png",
      "48" : "images/glg.png"
   },
   "description" : "Use SSO authentication on other GLG Domains",
   "content_security_policy" : "script-src 'self' 'unsafe-eval'; object-src 'self' 'unsafe-eval'",
   "content_scripts" : [
      {
         "run_at" : "document_end",
         "matches" : [
            "https://customsso.glgroup.com/*"
         ],
         "js" : [
            "js/sso_hook.js"
         ]
      }
   ],
   "web_accessible_resources" : [
      "config.js",
      "js/*",
      "images/*"
   ],
   "manifest_version" : 2
}
